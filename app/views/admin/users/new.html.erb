

<div class="box box-success">

<div class="box-body">
<div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
    <%= form_with(model: @user, url: admin_users_path, local: true) do |f| %>
<div class="row">
 <div class="form-group col-6">
    <%= f.label :first_name, class: "sr-only" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "First Name", class: "form-control", placeholder:"First name" %>
  </div>
 <div class="form-group col-6">
    <%= f.label :last_name, class: "sr-only" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Last Name", class: "form-control", placeholder:"Last name" %>
  </div>
</div>
 <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email address" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Password" %>
    <% if @minimum_password_length %>
    <small id="passwordHelp" class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirm password" %>
  </div>

  <div class="actions">
    <%= f.submit "Add User", class: "btn btn-success", style: "margin-left: auto;margin-right:auto;width:100%;" %>
  </div>
<% end %>
    </div>
    <div class="col-4">
    </div>
</div>
</div>
            <!-- /.box-body -->
</div>